<div class="row col-md-12">
<div class="col-md-6 pr-5">
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search by region:") %> 
  <%= select_tag(:q, options_for_select([["Select Region", "Select Region"]] + Region.all.collect { |r| [ r.name, r.name ] }))%>
  <%= submit_tag("Search") %>
<% end %>

</div>

<div class="col-md-6">

<%= form_tag("/searchrange", method: "get") do %>

<p>
<%= label_tag(:q, "Search by date range: ")  %>
</p>

  <p>
    <%= label_tag(:q, "Start")  %><br>
    
     
     <%= datetime_select("sightings", "start_date") %>
   
  </p>
  <p>
  <%= label_tag(:q, "End")  %><br>
    
    <%# <%= datetime_select(:end, { ampm: true, order: [:day, :month, :year] }) %>
    <%= datetime_select("sightings", "end_date") %>
  </p>

  <p>
    <%= submit_tag("Search") %>
  </p>
<% end %>
</div>

</div>



