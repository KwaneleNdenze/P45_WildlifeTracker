<%= form_with(model: [ @animal, @animal.sightings.build ], local: true) do |form| %>
  <p>
    <%= form.label :date %><br>
    <%= form.datetime_select :date, { ampm: true, order: [:day, :month, :year] } %>
  </p>
  <p>
    <%= form.label :longitude %><br>
    <%= form.text_field :longitude %>
  </p>
  <p>
    <%= form.label :latitude %><br>
    <%= form.text_field :latitude %>
  </p>

  <p>
  <%= form.select :region, Region.all.collect { |r| [ r.name, r.name ] } %>
  </p>


  <p>
    <%= form.submit %>
  </p>
<% end %>